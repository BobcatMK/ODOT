<h1><%= @todo_list.title %></h1>
<p>Find me in app/views/todo_items/index.html.erb</p>

<ul class="todo_items">
	<% @todo_list.todo_items.each do |todo_items| %>
		<li id=<%= dom_id(todo_items) %>>
			<%= todo_items.content %>
			<%= link_to "Edit", edit_todo_list_todo_item_path(todo_items) %> <!-- Poprzez dodanie w kontrolerze metody url_options nie trzeba juz wpisywac @todo_list przed todo_items -->
			<%= link_to "Delete", todo_list_todo_item_path(todo_items), method: :delete, data: {confirm: "Are you sure?"} %>
		</li>
	<% end %>
</ul>

<p>
	<%= link_to "New Todo Item", new_todo_list_todo_item_path %>
</p>
